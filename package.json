{
  "name": "workspace-root",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile build",
    "update:mobile:dev": "pnpm --filter mobile update:dev",
    "update:mobile:preview": "pnpm --filter mobile update:preview",
    "update:mobile:prod": "pnpm --filter mobile update:prod",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}