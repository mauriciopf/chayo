# Force use of public npm registry for this project (override corporate artifactory)
registry=https://registry.npmjs.org/

# Corporate network SSL bypass (for public registry access)
strict-ssl=false
ca=null

# Make RN-visible deps flatten to the root node_modules so the RN CLI can find them
shamefully-hoist=true

public-hoist-pattern[]=react-native
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@react-native-community/*
public-hoist-pattern[]=@react-navigation/*
public-hoist-pattern[]=hermes-engine
public-hoist-pattern[]=yoga-*
public-hoist-pattern[]=metro*
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=@babel/*
public-hoist-pattern[]=react-native-vector-icons