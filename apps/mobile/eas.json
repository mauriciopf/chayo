{
  "cli": { 
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": { 
      "developmentClient": true, 
      "ios": {
        "simulator": true
      }, 
      "android": {
        "buildType": "apk"
      }
    },
    "preview": { 
      "ios": {
        "simulator": false,
        "distribution": "internal"
      }, 
      "android": {
        "buildType": "apk"
      }
    },
    "production": { 
      "autoIncrement": true,
      "env": {
        "VERSION_BUMP_TYPE": "minor"
      },
      "ios": {
        "simulator": false,
        "distribution": "store",
        "image": "latest"
      }, 
      "android": {
        "buildType": "app-bundle"
      }
    },
    "production-patch": { 
      "autoIncrement": true,
      "env": {
        "VERSION_BUMP_TYPE": "patch"
      },
      "ios": {
        "simulator": false,
        "distribution": "store"
      }, 
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {
      "ios": { 
        "ascAppId": "6751903645"
      },
      "android": { 
        "track": "internal", 
        "serviceAccountKeyPath": "./play-sa.json" 
      }
    }
  }
}