{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.js",
    "app.config.js"
  ],
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android"
  ]
}
